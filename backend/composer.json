{
    "name": "semplice/semplice",
    "description": "Copy of WordPress for study",
    "license": "Apache License 2.0",
    "authors": [
        {
            "name": "Masaru Yamagishi",
            "email": "yamagishi.iloop@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1.0"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^2.8",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5",
        "psalm/plugin-phpunit": "^0.16.1",
        "psr/http-server-handler": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "vimeo/psalm": "^4.20"
    },
    "autoload": {
        "psr-4": {
            "Semplice\\": "src/Semplice/"
        }
    },
    "replace": {
        "semplice/container": "self.version",
        "semplice/contracts": "self.version",
        "semplice/http": "self.version",
        "semplice/routing": "self.version"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "psalm": "psalm",
        "phpcs": "phpcs src",
        "lint": [
            "@phpcs",
            "@psalm"
        ],
        "ci": [
            "@lint",
            "@test"
        ]
    }
}
